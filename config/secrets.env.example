# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# Master Password for Encryption (generate a strong password)
MASTER_PASSWORD=your_strong_master_password_here

# Bybit API Configuration
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=true
BYBIT_BASE_URL=https://api-testnet.bybit.com

# Database Configuration
TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5432
TIMESCALEDB_DBNAME=trading_bot
TIMESCALEDB_USER=trading_user
TIMESCALEDB_PASSWORD=your_db_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=bybit_trading_bot

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=10

# Trading Configuration
TRADING_SYMBOL=BTCUSDT
TRADING_CATEGORY=linear
TRADING_TIMEFRAME=1
TRADING_LEVERAGE=2

# Risk Management
RISK_PER_TRADE=0.01
MAX_DAILY_LOSS=0.03
MAX_CONCURRENT_POSITIONS=1
EMERGENCY_STOP_ENABLED=true

# Security Configuration
MAX_FAILED_ATTEMPTS=5
RATE_LIMIT_WINDOW=300
MAX_REQUESTS_PER_WINDOW=100
SECURITY_ALERT_ENABLED=true

# Feature Engineering
FEATURE_LOOKBACK_WINDOW=100
INDICATOR_PERIODS=20,50,100
VOLATILITY_WINDOW=20

# Model Training
MODEL_TYPE=xgboost
TRAINING_DATA_DAYS=365
VALIDATION_SPLIT=0.2
CROSS_VALIDATION_FOLDS=5

# Backtesting
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
BACKTEST_INITIAL_CAPITAL=10000
BACKTEST_COMMISSION=0.001
BACKTEST_SLIPPAGE=0.0005

# External API Keys (for additional data sources)
NEWS_API_KEY=your_news_api_key
FRED_API_KEY=your_fred_api_key
GLASSNODE_API_KEY=your_glassnode_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key
